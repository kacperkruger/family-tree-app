{{#> layout}}
    {{#*inline "content"}}
        <h1>Welcome {{user.username}}</h1>
        <h3>Your profile: </h3>
        <div>
            <div>
                <div>id: </div>
                <div>{{user._id}}</div>
            </div>
            <div>
                <div>username: </div>
                <div>{{user.username}}</div>
            </div>
            <div>
                <div>email: </div>
                <div>{{user.email}}</div>
            </div>
            <div>
                <div>registration date: </div>
                <div>{{user.registrationDate}}</div>
            </div>
            <div>
                <div>role: </div>
                <div>{{user.role}}</div>
            </div>
            <div>
                <a href="/edit/{{user._id}}">edit</a>
            </div>
        </div>

        <ul>
            {{#each users as |user|}}
                <div>
                    <div>
                        <div>id: </div>
                        <div>{{user._id}}</div>
                    </div>
                    <div>
                        <div>username: </div>
                        <div>{{user.username}}</div>
                    </div>
                    <div>
                        <div>email: </div>
                        <div>{{user.email}}</div>
                    </div>
                    <div>
                        <div>registration date: </div>
                        <div>{{user.registrationDate}}</div>
                    </div>
                    <div>
                        <div>role: </div>
                        <div>{{user.role}}</div>
                    </div>
                    <div>
                        <a href="/edit/{{user._id}}">edit</a>
                    </div>
                </div>
            {{/each}}
        </ul>
    {{/inline}}
{{/layout}}
